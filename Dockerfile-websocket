FROM python:3.11

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    portaudio19-dev \
    python3-pyaudio

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy entire websocket directory and maintain structure
COPY websocket /app/websocket

# Create __init__.py if it doesn't exist
RUN touch /app/websocket/__init__.py

# Set PYTHONPATH
ENV PYTHONPATH=/app

WORKDIR /app

CMD ["python", "-m", "websocket.websocket_server"]